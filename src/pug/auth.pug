extends templates/main

include components/soc-auth

block variables
  - const title = 'Log in';
  - const pageClass = 'forms-page';

block header
  header.header.header--cropped
    +logo()

block content
  // forms-area
  section.forms-area
    .forms-area__body
      .forms-area__title.tertiary-heading Log #[span in]
      .forms-area__content
        .forms-area__soc-title Log in with
        +soc-auth('forms-area__soc')
        .forms-area__auth-invite #[span or use your email for registration]
        form.forms-area__form(action="/" method="POST" name="login-form")
          .forms-area__field.forms-area__field--icon
            input.forms-area__input(type="email" name="user-email" id="field-1" placeholder="Email")
            label.forms-area__label(for="field-1") Email
            +icon('email', 'forms-area__field-icon')
          .forms-area__field.forms-area__field--icons
            .forms-area__field-body
              input.forms-area__input(type="password" name="user-psw" id="field-2" placeholder="Password")
              label.forms-area__label(for="field-2") Password
              +icon('padlock', 'forms-area__field-icon')
              +icon('eye', 'forms-area__field-icon-helper js-psw-field-toggle')
          .forms-area__field
            .row
              .col-6
                .forms-area__checkbox.checkbox-label
                  input.checkbox-label__input(type="checkbox" name="remember" id="checkbox-opt-1")
                  label.checkbox-label__main(for="checkbox-opt-1") Remember me
              .col-6
                a.forms-area__restore-psw-link(href="#") Forgot Password?
          .forms-area__footer
            button.forms-area__btn.btn.btn--grad.btn--animated.btn--sm(type="submit" name="send-data") Log In
        .forms-area__summary
          .forms-area__variant
            | Don’t have an account, let’s get you started 
            a.forms-area__variant-link(href="#") Sign up #[i.fas.fa-chevron-right]
  // forms-area