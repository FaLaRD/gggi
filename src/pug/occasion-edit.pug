extends templates/main

block variables
  - const title = 'Occasion Detail';
  - const pageClass = 'occasion-detail-page';

block content
  .main-heading-wrap
    .main-heading.main-heading--user-pic
      .main-heading__body #[span.main-heading__first-letter O]ccasion #[span.main-heading__accent detail]

  .container-fluid
    main.primary-content
      
      // your-profile-form
      +b.FORM.fast-search--gaps(name="fast-search" action="/" method="POST")

        +e.FIGURE.user-picture.user-picture--authorized
          label.user-picture__label(for="user-picture-file")
            .user-picture__img-wrap
              img.user-picture__img(src="assets/images/media/user-13.jpg" width="100" alt="")
            figcaption.user-picture__details
              div.user-picture__add #[i.fas.fa-camera] #[span Add Photo]
              input(type="file" name="user-picture" id="user-picture-file")

        .user-picture__name Ivanov Nickolay
        
        // set of fields 1
        +e.FIELDSET.section(name="occasion")

          +e.LEGEND.heading.secondary-heading Edit occasion details

          +e.field

            .row

              .col-md-5

                +e.field
                  +e.LABEL.label(for="occasion") Occasion #[span *]
                  +e.INPUT(type="text" name="occasion" id="occasion" value="Valentine's day" tabindex="1")

              .col-md-5

                +e.field
                  +e.LABEL.label(for="occasion-date") Occasion Date #[span *]
                  +e.field-datepicker
                    +e.INPUT.date-picker.js-date-picker(id="occasion-date" type="text" name="occasion-date" placeholder="YYYY / MM / DD" value="02 / 14 / 2020" tabindex="2")
                    i.fa.fa-calendar-alt

              .col-md-2

                +e.field
                  +e.LABEL.label(for="budget") Budget ($) #[span *]
                  +e.INPUT(type="text" name="budget" id="budget" value="20$" tabindex="3")
        // /set of fields 1

        // set of fields 2
        +e.FIELDSET.section(name="more-options")
          +e.LEGEND.heading.secondary-heading Additional Options
          +e.field
            +e.checkbox.checkbox-label
              input.checkbox-label__input(type="checkbox" name="add-opts-gift" checked id="checkbox-opt-1" tabindex="4")
              label.checkbox-label__main(for="checkbox-opt-1") Gift wrap ($3-7 of budget)
          +e.field
            +e.checkbox.checkbox-label
              input.checkbox-label__input(type="checkbox" name="add-opts-card" id="checkbox-opt-2" tabindex="5")
              label.checkbox-label__main(for="checkbox-opt-2") Card ($5 of budger, shipped to you with a stamp to complete and send on)
        // /set of fields 2

        // set of fields 2
        +e.FIELDSET.section(name="more-options")
          +e.LEGEND.heading.secondary-heading Delivery Information
          +e.field
            .row
              .col-md-6
                +e.field
                  +e.LABEL.label(for="u-email") Email #[span *]
                  +e.INPUT.input(type="email" name="user-email" id="u-email" value="alexa2727@gmail.com" tabindex="6")
              .col-md-6
                +e.field
                  +e.LABEL.label(for="u-tel") Phone #[span *]
                  +e.INPUT.input(type="tel" name="user-tel" id="u-tel" value="727-292-1997" tabindex="7")
          +e.field
            +e.field
              +e.LABEL.label(for="u-main-addr") Address 1 #[span *]
              +e.INPUT.input(type="text" name="user-main-address" id="u-main-addr" value="3030 Starkey blvd. New Port Richey, FL 34655" tabindex="8")
          +e.field
            +e.field
              +e.LABEL.label(for="u-main-addr-2") Address 2
              +e.INPUT.input(type="text" name="user-main-address-2" id="u-main-addr-2" value="3030 Starkey blvd. New Port Richey, FL 34655" tabindex="9")
          .row
            .col-md-6
              +e.field
                +e.LABEL.label(for="u-city") City #[span *]
                +e.INPUT.input(type="text" name="user-city" id="u-city" value="New York" tabindex="10")
            .col-md-3
              +e.field
                +e.LABEL.label(for="u-state") State #[span *]
                +e.INPUT.input(type="text" name="user-state" id="u-state" value="New York" tabindex="11")
            .col-md-3
              +e.field
                +e.LABEL.label(for="u-zip") Zip #[span *]
                +e.INPUT.input(type="text" name="user-zip" id="u-zip" value="3030" tabindex="12")
        // /set of fields 2

        // set of fields 3
        +e.FIELDSET.section--crop(name="more-options")

          +e.LEGEND.heading.secondary-heading Choose a card for payment
          
