                      span.add-card__number #[span · · · ·] #[span · · · ·] #[span · · · ·] #[span 0008]
                      span.add-card__expire Exp: 12/24

              .col-sm-6.col-md-4

                .add-card__radio-opt.radio-opt.active
                  .add-card__radio.radio-label
                    input.radio-label__input(type="radio" name="card-type" value="card-type-3" id="card-type-3" checked tabindex="7")
                    label.radio-label__main(for="card-type-3")
                      span.add-card__radio-img-wrap
                        img.add-card__radio-img(src="assets/images/master-card.png" alt="" width="55" height="40")
                      span.add-card__number #[span · · · ·] #[span · · · ·] #[span · · · ·] #[span 6967]
                      span.add-card__expire Exp: 06/20

              .col-sm-6.col-md-4

                .add-card__radio-opt.radio-opt.active
                  .add-card__radio.radio-label
                    input.radio-label__input(type="radio" name="card-type" value="card-type-7" id="card-type-7" checked tabindex="7")
                    label.radio-label__main(for="card-type-7")
                      span.add-card__radio-img-wrap
                        img.add-card__radio-img(src="assets/images/master-card.png" alt="" width="55" height="40")
                      span.add-card__number #[span · · · ·] #[span · · · ·] #[span · · · ·] #[span 6967]
                      span.add-card__expire Exp: 06/20
              
              .col-sm-6.col-md-4
                    
                .add-card__radio-opt.radio-opt
                  .add-card__radio.radio-label
                    input.radio-label__input(type="radio" name="card-type" value="card-type-8" id="card-type-8" tabindex="8")
                    label.radio-label__main(for="card-type-8") 
                      span.add-card__radio-img-wrap
                        img.add-card__radio-img(src="assets/images/visa.png" alt="" width="55" height="40")
                      span.add-card__number #[span · · · ·] #[span · · · ·] #[span · · · ·] #[span 0008]
                      span.add-card__expire Exp: 12/24

              .col-sm-6.col-md-4

                a.add-card__btn(href="")
