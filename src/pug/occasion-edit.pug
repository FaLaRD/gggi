                    .add-card__icon
                    figcaption.add-card__figcaption Add Card
        // /set of fields 3

        // primary-content-footer
        .primary-content__footer.text-center
          button.next-step-btn.btn.btn--grad.btn--animated(type="submit" name="send-data") Update Details
          .next-step-wrap
            a.next-step-stage(href="#") #[i.fas.fa-times-circle] Close
        // /primary-content-footer

block script
  //-script(src="assets/js/inputmask.min.js")

  script.
    document.addEventListener('DOMContentLoaded', function() {
      const datePickerMask = document.querySelectorAll('.js-date-picker');
      
      if (datePickerMask) {
        datePickerMask.forEach((pickerField) => {
          const userCodeMaskInstance = new Inputmask({
            mask: '9999 / 99 / 99',
            definitions: {},
            autoUnmask: true,
            placeholder: '_',
            //- clearMaskOnLostFocus: false
          });

          userCodeMaskInstance.mask(pickerField);
        });
      }
    });