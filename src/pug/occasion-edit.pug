                  .add-card__radio.radio-label
                    input.radio-label__input(type="radio" name="card-type" value="card-type-1" id="card-type-1" checked tabindex="7")
                    label.radio-label__main(for="card-type-1")
                      span.add-card__radio-img-wrap
