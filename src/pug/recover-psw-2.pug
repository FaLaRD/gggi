extends templates/main

block variables
  - const title = 'Enter the code';
  - const pageClass = 'forms-page';

block header
  header.header.header--cropped
    +logo()

block content
  // forms-area
  section.forms-area
    .forms-area__body
      .forms-area__heading.secondary-heading #{title}
      p.forms-area__desc Please enter the code received in the letter we will generate a password for you that you can change in the user profile
      .forms-area__content
        form.forms-area__form(action="/" method="POST" name="psw-form")
          .forms-area__field
            input.forms-area__input.text-center(type="text" name="user-code" id="user-code")
          .forms-area__footer
            button.forms-area__btn.btn.btn--primary-reverse.btn--sm(type="submit" name="send-data") Enter
  // /forms-area

block script
  //-script(src="assets/js/inputmask.min.js")
  
  script.
    document.addEventListener('DOMContentLoaded', function() {
      const userCodeField = document.getElementById('user-code');

      const userCodeMaskInstance = new Inputmask({
        mask: '9 9 9 9 9 9 9 9 9 9 9',
        definitions: {},
        autoUnmask: true,
        placeholder: '_',
        clearMaskOnLostFocus: false
      });

      userCodeMaskInstance.mask(userCodeField);
    });

