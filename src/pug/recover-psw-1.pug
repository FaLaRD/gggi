extends templates/main

block variables
  - const title = 'Password recovery';
  - const pageClass = 'forms-page';

block header
  header.header.header--cropped
    +logo()

block content
  // forms-area
  section.forms-area
    .forms-area__body
      .forms-area__heading.secondary-heading #{title}
      p.forms-area__desc Please indicate the e-mail you used to enter the site. You will be sent a link  with password recovery instructions
      .forms-area__content
        form.forms-area__form(action="/" method="POST" name="psw-form")
          .forms-area__field.forms-area__field--icon
            input.forms-area__input(type="email" name="user-email" id="field-1" placeholder="Email")
            label.forms-area__label(for="field-1") Email
            +icon('email', 'forms-area__field-icon')
          .forms-area__footer
            button.forms-area__btn.btn.btn--primary-reverse.btn--sm(type="submit" name="send-data") Send to Email
  // forms-area