extends templates/main

include components/soc-auth

block variables
  - const title = 'Create account';
  - const pageClass = 'forms-page';

block header
  header.header.header--cropped
    +logo()

block content
  // forms-area
  section.forms-area
    .forms-area__body
      .forms-area__title.tertiary-heading Create #[span account]
      .forms-area__content
        .forms-area__soc-title Log in with
        +soc-auth('forms-area__soc')
        .forms-area__auth-invite #[span or use your email for registration]
        form.forms-area__form(action="/" method="POST" name="reg-form")
          .forms-area__field.forms-area__field--icon
            input.forms-area__input(type="text" name="user-name" id="field-1" placeholder="Name")
            label.forms-area__label(for="field-1") Name
            +icon('add-user', 'forms-area__field-icon')
          .forms-area__field.forms-area__field--icon
            input.forms-area__input(type="email" name="user-email" id="field-2" placeholder="Email")
            label.forms-area__label(for="field-2") Email
            +icon('email', 'forms-area__field-icon')
          .forms-area__field.forms-area__field--icons
            .forms-area__field-body
              input.forms-area__input(type="password" name="user-psw" id="field-1" placeholder="Password")
              label.forms-area__label(for="field-1") Password
              +icon('padlock', 'forms-area__field-icon')
              +icon('eye', 'forms-area__field-icon-helper js-psw-field-toggle')
          .forms-area__field.forms-area__field--icons
            .forms-area__field-body
              input.forms-area__input(type="password" name="user-psw-confirm" id="field-2" placeholder="Confirm password")
              label.forms-area__label(for="field-2") Retype password
              +icon('padlock', 'forms-area__field-icon')
              +icon('eye', 'forms-area__field-icon-helper js-psw-field-toggle')
          .forms-area__footer-summary
            p.forms-area__notification Passwords are case-sensitive, and must be at least 8 characters in length, and contain a number or special character
            button.forms-area__btn.btn.btn--grad.btn--animated(type="submit" name="send-data") Send to Email
        .forms-area__summary
          .forms-area__variant
            | Already a member 
            a.forms-area__variant-link(href="#") Sign in #[i.fas.fa-chevron-right]
  // forms-area