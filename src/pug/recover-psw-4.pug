extends templates/main

block variables
  - const title = 'Create new password';
  - const pageClass = 'forms-page';

block header
  header.header.header--cropped
    +logo()

block content
  // forms-area
  section.forms-area
    .forms-area__body
      .forms-area__heading.secondary-heading #{title}
      .forms-area__content
        form.forms-area__form(action="/" method="POST" name="psw-form")
          .forms-area__field.forms-area__field--icons
            .forms-area__field-body
              input.forms-area__input(type="password" name="user-psw" id="field-1" placeholder="Password")
              label.forms-area__label(for="field-1") Password
              +icon('padlock', 'forms-area__field-icon')
              +icon('eye', 'forms-area__field-icon-helper js-psw-field-toggle')
          .forms-area__field.forms-area__field--icons.err
            .forms-area__field-body
              input.forms-area__input(type="password" name="user-psw-confirm" id="field-2" placeholder="Confirm password")
              label.forms-area__label(for="field-2") Confirm Password
              +icon('padlock', 'forms-area__field-icon')
              +icon('eye', 'forms-area__field-icon-helper js-psw-field-toggle')
            .forms-area__err-msg Password does not match
          .forms-area__footer
            button.forms-area__btn.btn.btn--grad.btn--sm.btn--animated(type="submit" name="send-data") Save
  // /forms-area